{
  "manifest_version": 3,
  "name": "FreelanceFlow for Gmail",
  "version": "1.0.0",
  "description": "AI-powered client response generation with scope creep detection for freelancers",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "FreelanceFlow"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/sidebar.html", "sidebar/*", "icons/*"],
      "matches": ["https://mail.google.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
